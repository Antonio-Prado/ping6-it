+async function mapWithConcurrency(items, limit, mapper) {
+  const list = Array.isArray(items) ? items : [];
+  const n = list.length;
+  if (!n) return [];
+
+  const out = new Array(n);
+  let next = 0;
+
+  const worker = async () => {
+    while (true) {
+      const i = next;
+      next += 1;
+      if (i >= n) break;
+      out[i] = await mapper(list[i], i);
+    }
