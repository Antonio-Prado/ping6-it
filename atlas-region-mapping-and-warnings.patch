+function distributeRequested(total, buckets) {
+  const t = Math.max(1, Math.trunc(Number(total) || 1));
+  const b = Math.max(1, Math.trunc(Number(buckets) || 1));
+  const base = Math.floor(t / b);
+  const rem = t % b;
+  const out = [];
+  for (let i = 0; i < b; i += 1) {
+    const n = base + (i < rem ? 1 : 0);
+    if (n > 0) out.push(n);
+  }
